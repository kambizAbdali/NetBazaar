@{
    ViewBag.Title = "مدیریت کاربران";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h2 class="mb-4">مدیریت کاربران</h2>

    <!-- کارت‌های خلاصه -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-muted">کل کاربران</h6>
                    <p class="fs-4 fw-bold text-primary">2,450</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-muted">مدیران</h6>
                    <p class="fs-4 fw-bold text-info">12</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-muted">مشتریان فعال</h6>
                    <p class="fs-4 fw-bold text-success">2,300</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-muted">کاربران مسدود شده</h6>
                    <p class="fs-4 fw-bold text-danger">138</p>
                </div>
            </div>
        </div>
    </div>

    <!-- فیلتر کاربران -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form class="row g-3">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="جستجو بر اساس نام یا ایمیل" />
                </div>
                <div class="col-md-3">
                    <select class="form-select">
                        <option value="">همه نقش‌ها</option>
                        <option value="admin">مدیر</option>
                        <option value="customer">مشتری</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select">
                        <option value="">همه وضعیت‌ها</option>
                        <option value="active">فعال</option>
                        <option value="blocked">مسدود</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">اعمال فیلتر</button>
                </div>
            </form>
        </div>
    </div>

    <!-- جدول کاربران -->
    <div class="card shadow-sm">
        <div class="card-header fw-bold">لیست کاربران</div>
        <div class="card-body table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead>
                    <tr>
                        <th>شناسه</th>
                        <th>نام</th>
                        <th>ایمیل</th>
                        <th>نقش</th>
                        <th>وضعیت</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>U-1001</td>
                        <td>کامبیز</td>
                        <td>kambiz@example.com</td>
                        <td><span class="badge bg-info">مدیر</span></td>
                        <td><span class="badge bg-success">فعال</span></td>
                        <td>
                            <a href="@Url.Action("Edit", "Users", new { id = 1001 })" class="btn btn-sm btn-outline-primary">ویرایش</a>
                            <a href="@Url.Action("Block", "Users", new { id = 1001 })" class="btn btn-sm btn-outline-danger">مسدود</a>
                        </td>
                    </tr>
                    <tr>
                        <td>U-1002</td>
                        <td>مریم</td>
                        <td>maryam@example.com</td>
                        <td><span class="badge bg-success">مشتری</span></td>
                        <td><span class="badge bg-success">فعال</span></td>
                        <td>
                            <a href="@Url.Action("Edit", "Users", new { id = 1002 })" class="btn btn-sm btn-outline-primary">ویرایش</a>
                            <a href="@Url.Action("Block", "Users", new { id = 1002 })" class="btn btn-sm btn-outline-danger">مسدود</a>
                        </td>
                    </tr>
                    <tr>
                        <td>U-1003</td>
                        <td>علی</td>
                        <td>ali@example.com</td>
                        <td><span class="badge bg-success">مشتری</span></td>
                        <td><span class="badge bg-danger">مسدود</span></td>
                        <td>
                            <a href="@Url.Action("Edit", "Users", new { id = 1003 })" class="btn btn-sm btn-outline-primary">ویرایش</a>
                            <a href="@Url.Action("Unblock", "Users", new { id = 1003 })" class="btn btn-sm btn-outline-success">فعال‌سازی</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
