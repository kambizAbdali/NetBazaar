@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - پنل مدیریت</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazir-font@v30.1.0/dist/font-face.css" rel="stylesheet" />

    <!-- Custom Styles -->
    <style>
        body {
            background-color: #f0f2f5;
            font-family: 'Vazir', sans-serif;
        }

        .sidebar {
            width: 240px;
            min-height: 100vh;
            background-color: #343a40;
            padding: 20px;
            color: #fff;
        }

            .sidebar h5 {
                color: #ffc107;
                margin-bottom: 20px;
            }

            .sidebar .nav-link {
                color: #ced4da;
                font-weight: 500;
                margin-bottom: 10px;
                transition: all 0.2s ease-in-out;
            }

                .sidebar .nav-link:hover {
                    color: #fff;
                    background-color: #495057;
                    border-radius: 6px;
                    padding-right: 10px;
                }

                .sidebar .nav-link.active {
                    color: #fff;
                    background-color: #0d6efd;
                    border-radius: 6px;
                    padding-right: 10px;
                }

        .main-content {
            padding: 30px;
            background-color: #ffffff;
            border-radius: 12px;
            margin: 20px;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
        }

        .topbar {
            background-color: #fff;
            border-bottom: 1px solid #dee2e6;
            padding: 10px 20px;
        }
    </style>
</head>
<body>

    <div class="d-flex flex-row">
        <!-- Sidebar -->
        <aside class="sidebar d-flex flex-column">
            <h5><i class="bi bi-speedometer2 me-2"></i>پنل مدیریت</h5>
            <nav class="nav flex-column">
                <a class="nav-link @(ViewBag.ActiveMenu == "Dashboard" ? "active" : "")" href="@Url.Action("Index", "Dashboard")"><i class="bi bi-house-door me-2"></i>داشبورد</a>
                <a class="nav-link @(ViewBag.ActiveMenu == "Users" ? "active" : "")" href="@Url.Action("Index", "Users")"><i class="bi bi-people me-2"></i>کاربران</a>
                <a class="nav-link @(ViewBag.ActiveMenu == "Orders" ? "active" : "")" href="@Url.Action("Index", "Orders")"><i class="bi bi-cart me-2"></i>سفارش‌ها</a>
                <a class="nav-link @(ViewBag.ActiveMenu == "Products" ? "active" : "")" href="@Url.Action("Index", "Products")"><i class="bi bi-box-seam me-2"></i>محصولات</a>
                <a class="nav-link @(ViewBag.ActiveMenu == "Categories" ? "active" : "")" href="@Url.Action("Index", "Categories")"><i class="bi bi-tags me-2"></i>دسته‌بندی‌ها</a>
                <a class="nav-link @(ViewBag.ActiveMenu == "Stats" ? "active" : "")" href="@Url.Action("Index", "Stats")"><i class="bi bi-bar-chart-line me-2"></i>آمار</a>
                <a class="nav-link @(ViewBag.ActiveMenu == "Reports" ? "active" : "")" href="@Url.Action("Index", "Reports")"><i class="bi bi-file-earmark-text me-2"></i>گزارش‌ها</a>
                <a class="nav-link @(ViewBag.ActiveMenu == "Settings" ? "active" : "")" href="@Url.Action("Index","Settings")"><i class="bi bi-gear me-2"></i>تنظیمات</a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-grow-1 main-content">
            @RenderBody()
        </main>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
@RenderSection("Scripts", required: false)
