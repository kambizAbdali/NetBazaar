@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - پنل مدیریت</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazir-font@v30.1.0/dist/font-face.css" rel="stylesheet" />

    <link href="~/lib/bootstrap/dist/css/tom-select.bootstrap5.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/tom-select.complete.min.js"></script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    

    <!-- Custom Styles -->
    <style>
        body {
            background-color: #f0f2f5;
            font-family: 'Vazir', sans-serif;
        }

        .sidebar {
            width: 240px;
            min-height: 100vh;
            background-color: #343a40;
            padding: 20px;
            color: #fff;
        }

            .sidebar h5 {
                color: #ffc107;
                margin-bottom: 20px;
            }

            .sidebar .nav-link {
                color: #ced4da;
                font-weight: 500;
                margin-bottom: 10px;
                transition: all 0.2s ease-in-out;
            }

                .sidebar .nav-link:hover {
                    color: #fff;
                    background-color: #495057;
                    border-radius: 6px;
                    padding-right: 10px;
                }

                .sidebar .nav-link.active {
                    color: #fff;
                    background-color: #0d6efd;
                    border-radius: 6px;
                    padding-right: 10px;
                }

        .main-content {
            padding: 30px;
            background-color: #ffffff;
            border-radius: 12px;
            margin: 20px;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
        }

        .topbar {
            background-color: #fff;
            border-bottom: 1px solid #dee2e6;
            padding: 10px 20px;
        }
    </style>
</head>
<body>

    <div class="d-flex flex-row">
        <!-- Sidebar -->
        <aside class="sidebar d-flex flex-column">
            <h5><i class="bi bi-speedometer2 me-2"></i>پنل مدیریت</h5>
            <nav class="nav flex-column">
                <a class="nav-link @(ViewBag.ActiveMenu == "Dashboard" ? "active" : "")" href="@Url.Action("Index", "Dashboard")"><i class="bi bi-house-door me-2"></i>داشبورد</a>
                <a class="nav-link @(ViewBag.ActiveMenu == "Users" ? "active" : "")" href="@Url.Action("Index", "Users")"><i class="bi bi-people me-2"></i>کاربران</a>
                <a class="nav-link @(ViewBag.ActiveMenu == "Orders" ? "active" : "")" href="@Url.Action("Index", "Orders")"><i class="bi bi-cart me-2"></i>سفارش‌ها</a>
                <a class="nav-link @(ViewBag.ActiveMenu == "Catalog" ? "active" : "")" href="@Url.Action("Index", "Catalog")"><i class="bi bi-box-seam me-2"></i>محصولات</a>

                <a class="nav-link @(ViewBag.ActiveMenu == "CatalogBrand" ? "active" : "")" href="@Url.Action("Index", "CatalogBrand")"><i class="bi bi-box-seam me-2"></i>برند محصولات</a>
                <a class="nav-link @(ViewBag.ActiveMenu == "CatalogType" ? "active" : "")" href="@Url.Action("Index", "CatalogType")"><i class="bi bi-tags me-2"></i>دسته‌بندی محصولات‌ </a>
                <a class="nav-link @(ViewBag.ActiveMenu == "Stats" ? "active" : "")" href="@Url.Action("Index", "Stats")"><i class="bi bi-bar-chart-line me-2"></i>آمار</a>
                <a class="nav-link @(ViewBag.ActiveMenu == "Reports" ? "active" : "")" href="@Url.Action("Index", "Reports")"><i class="bi bi-file-earmark-text me-2"></i>گزارش‌ها</a>
                <a class="nav-link @(ViewBag.ActiveMenu == "Settings" ? "active" : "")" href="@Url.Action("Index","Settings")"><i class="bi bi-gear me-2"></i>تنظیمات</a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-grow-1 main-content">
            @RenderBody()
        </main>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>


    <script src="~/js/signalr/dist/browser/signalr.min.js"></script>
    <script>
               const adminConnection = new signalR.HubConnectionBuilder()
        .withUrl("http://localhost:5134/Hubs/OnlineVisitorsHub", { withCredentials: true })
        .withAutomaticReconnect()
        .build();

        adminConnection.on("OnlineCountUpdated", function(count) {
            const el = document.getElementById("online-count-admin");
            if (el) el.textContent = count.toString();
        });

        adminConnection.start()
            .then(() => {
                console.log("Admin connected to OnlineVisitorsHub");

                // دریافت مقدار اولیه
                adminConnection.invoke("GetCurrentOnlineCount")
                    .then(count => {
                        const el = document.getElementById("online-count-admin");
                        if (el) el.textContent = count.toString();
                    })
                    .catch(err => console.error("خطا در دریافت مقدار اولیه:", err));
            })
            .catch(err => console.error("خطا در اتصال:", err));
    </script>



    @* Views/Shared/_AdminLayout.cshtml (انتهای فایل، قبل از </body>) *@
    @await Html.PartialAsync("_OperationResultModal")
</body>
</html>
@RenderSection("Scripts", required: false)
