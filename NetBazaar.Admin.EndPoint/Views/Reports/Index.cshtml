@{
    ViewBag.Title = "گزارش‌ها";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h2 class="mb-4">گزارش‌ها</h2>

    <!-- کارت‌های خلاصه -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-cash-stack display-6 text-success"></i>
                    <h6 class="mt-2">گزارش فروش</h6>
                    <p class="fs-5 fw-bold text-success">ماه جاری: 120,000,000 تومان</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-people-fill display-6 text-primary"></i>
                    <h6 class="mt-2">گزارش کاربران</h6>
                    <p class="fs-5 fw-bold text-primary">کاربران جدید: 320</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-bar-chart-line display-6 text-warning"></i>
                    <h6 class="mt-2">گزارش بازدیدها</h6>
                    <p class="fs-5 fw-bold text-warning">بازدید امروز: 1,250</p>
                </div>
            </div>
        </div>
    </div>

    <!-- فرم انتخاب گزارش -->
    <div class="card shadow-sm mb-4">
        <div class="card-header fw-bold">ایجاد گزارش جدید</div>
        <div class="card-body">
            <form class="row g-3">
                <div class="col-md-4">
                    <select class="form-select">
                        <option value="">انتخاب نوع گزارش</option>
                        <option value="sales">فروش</option>
                        <option value="users">کاربران</option>
                        <option value="visits">بازدیدها</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <input type="date" class="form-control" placeholder="از تاریخ" />
                </div>
                <div class="col-md-3">
                    <input type="date" class="form-control" placeholder="تا تاریخ" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">ایجاد گزارش</button>
                </div>
            </form>
        </div>
    </div>

    <!-- جدول گزارش‌ها -->
    <div class="card shadow-sm">
        <div class="card-header fw-bold">لیست گزارش‌های اخیر</div>
        <div class="card-body table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead>
                    <tr>
                        <th>شناسه</th>
                        <th>نوع گزارش</th>
                        <th>بازه زمانی</th>
                        <th>تاریخ ایجاد</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>R-001</td>
                        <td>فروش</td>
                        <td>1404/08/01 - 1404/08/18</td>
                        <td>1404/08/18</td>
                        <td>
                            <a href="#" class="btn btn-sm btn-outline-success">
                                <i class="bi bi-download"></i> دانلود
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td>R-002</td>
                        <td>کاربران</td>
                        <td>1404/07/01 - 1404/07/30</td>
                        <td>1404/08/01</td>
                        <td>
                            <a href="#" class="btn btn-sm btn-outline-success">
                                <i class="bi bi-download"></i> دانلود
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td>R-003</td>
                        <td>بازدیدها</td>
                        <td>1404/06/01 - 1404/06/30</td>
                        <td>1404/07/01</td>
                        <td>
                            <a href="#" class="btn btn-sm btn-outline-success">
                                <i class="bi bi-download"></i> دانلود
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
