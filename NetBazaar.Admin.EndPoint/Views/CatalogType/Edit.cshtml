@using NetBazaar.Admin.EndPoint.ViewModels
@using NetBazaar.Admin.EndPoint.ViewModels.Catalog
@model CatalogTypeViewModel

@{
    ViewBag.Title = "مدیریت دسته‌بندی‌ها";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@(Model.Id == 0 ? "افزودن دسته‌بندی جدید" : "ویرایش دسته‌بندی")</h2>

<form method="post">
    <div class="mb-3">
        <label class="form-label">نام دسته‌بندی</label>
        <input type="text" class="form-control" asp-for="Type" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">شناسه والد (اختیاری)</label>
        <input type="number" class="form-control" asp-for="ParentId" />
    </div>

    <button type="submit" class="btn btn-primary">ذخیره</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">بازگشت</a>
</form>