@model NetBazaar.Application.DTOs.Common.PaginatedResult<NetBazaar.Application.DTOs.Catalog.CatalogListDto>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "مدیریت محصولات";
}

<h2 class="mb-3">مدیریت محصولات</h2>
<a asp-action="Create" class="btn btn-success mb-3">افزودن محصول جدید</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>شناسه</th>
            <th>نام</th>
            <th>قیمت</th>
            <th>دسته</th>
            <th>برند</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price.ToString("N0") ریال</td>
                <td>@item.TypeName</td>
                <td>@item.BrandName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">جزئیات</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">ویرایش</a>
                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">حذف</button>
                    @await Html.PartialAsync("_DeleteConfirmationModal", item.Id)
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    @await Html.PartialAsync("_Pagination", Model)
}
