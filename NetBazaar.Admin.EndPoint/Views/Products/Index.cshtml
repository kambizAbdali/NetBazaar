@{
    ViewBag.Title = "مدیریت محصولات";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h2 class="mb-4">مدیریت محصولات</h2>

    <!-- کارت‌های خلاصه -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-muted">کل محصولات</h6>
                    <p class="fs-4 fw-bold text-primary">1,250</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-muted">فعال</h6>
                    <p class="fs-4 fw-bold text-success">980</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-muted">ناموجود</h6>
                    <p class="fs-4 fw-bold text-danger">120</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-muted">پیش‌نویس</h6>
                    <p class="fs-4 fw-bold text-warning">150</p>
                </div>
            </div>
        </div>
    </div>

    <!-- فیلتر محصولات -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form class="row g-3">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="جستجو بر اساس نام محصول یا کد" />
                </div>
                <div class="col-md-3">
                    <select class="form-select">
                        <option value="">همه وضعیت‌ها</option>
                        <option value="active">فعال</option>
                        <option value="outofstock">ناموجود</option>
                        <option value="draft">پیش‌نویس</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">اعمال فیلتر</button>
                </div>
                <div class="col-md-3 text-end">
                    <a href="@Url.Action("Create", "Products")" class="btn btn-success">
                        <i class="bi bi-plus-circle me-1"></i> افزودن محصول جدید
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- جدول محصولات -->
    <div class="card shadow-sm">
        <div class="card-header fw-bold">لیست محصولات</div>
        <div class="card-body table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead>
                    <tr>
                        <th>کد محصول</th>
                        <th>نام محصول</th>
                        <th>قیمت</th>
                        <th>موجودی</th>
                        <th>وضعیت</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>P-1001</td>
                        <td>لپ‌تاپ ایسوس</td>
                        <td>25,000,000 تومان</td>
                        <td>15</td>
                        <td><span class="badge bg-success">فعال</span></td>
                        <td>
                            <a href="@Url.Action("Edit", "Products", new { id = 1001 })" class="btn btn-sm btn-outline-primary">ویرایش</a>
                            <a href="@Url.Action("Delete", "Products", new { id = 1001 })" class="btn btn-sm btn-outline-danger">حذف</a>
                        </td>
                    </tr>
                    <tr>
                        <td>P-1002</td>
                        <td>گوشی سامسونگ</td>
                        <td>12,500,000 تومان</td>
                        <td>0</td>
                        <td><span class="badge bg-danger">ناموجود</span></td>
                        <td>
                            <a href="@Url.Action("Edit", "Products", new { id = 1002 })" class="btn btn-sm btn-outline-primary">ویرایش</a>
                            <a href="@Url.Action("Delete", "Products", new { id = 1002 })" class="btn btn-sm btn-outline-danger">حذف</a>
                        </td>
                    </tr>
                    <tr>
                        <td>P-1003</td>
                        <td>کتری برقی</td>
                        <td>850,000 تومان</td>
                        <td>50</td>
                        <td><span class="badge bg-warning">پیش‌نویس</span></td>
                        <td>
                            <a href="@Url.Action("Edit", "Products", new { id = 1003 })" class="btn btn-sm btn-outline-primary">ویرایش</a>
                            <a href="@Url.Action("Delete", "Products", new { id = 1003 })" class="btn btn-sm btn-outline-danger">حذف</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
