@model NetBazaar.Application.DTOs.Catalog.CatalogDto
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "جزئیات محصول";
}

<h2>جزئیات محصول</h2>
<div class="card">
    <div class="card-header">
        <h4>@Model.Name</h4>
    </div>
    <div class="card-body">
        <p><strong>توضیحات:</strong> @Model.Description</p>
        <p><strong>قیمت:</strong> @Model.Price.ToString("N0") ریال</p>
        <p><strong>دسته:</strong> @Model.CatalogType?.Type</p>
        <p><strong>برند:</strong> @Model.CatalogBrand?.Brand</p>
        <p><strong>موجودی:</strong> @Model.StockQuantity</p>
        <p><strong>حداقل موجودی:</strong> @Model.ReorderThreshold</p>
        <p><strong>حداکثر ظرفیت:</strong> @Model.MaxStockThreshold</p>

        <h5>ویژگی‌ها</h5>
        <ul>
            @foreach (var f in Model.Features)
            {
                <li><strong>@f.Group - @f.Key:</strong> @f.Value</li>
            }
        </ul>

        <h5>تصاویر</h5>
        <div class="row">
            @foreach (var img in Model.Images)
            {
                <div class="col-md-3 mb-2">
                    <img src="@img.Src" class="img-fluid img-thumbnail" />
                </div>
            }
        </div>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">بازگشت</a>
