@model List<OrderDto>
@{
    ViewData["Title"] = "سفارش‌های من";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>سفارش‌های من</h2>

@if (!Model.Any())
{
    <p>شما هیچ سفارشی ثبت نکرده‌اید.</p>
}
else
{
   <table class="table">
        <thead>
            <tr>
                <th>شماره سفارش</th>
                <th>تاریخ</th>
                <th>وضعیت</th>
                <th>مبلغ کل</th>
                <th>تخفیف</th>
                <th>مبلغ قابل پرداخت</th>
                <th>روش پرداخت</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate.ToPersianDateTimeString()</td>
                    <td>@order.OrderStatus</td>
                    <td>
                        @if (order.DiscountAmount > 0)
                        {
                            <del class="text-muted">@order.TotalPriceWithoutDiscount.ToString("N0") تومان</del>
                        }
                        else
                        {
                            @order.TotalPriceWithoutDiscount.ToString("N0") <span>تومان</span>
                        }
                    </td>
                    <!-- New code: نمایش تخفیف -->
                    <td>
                        @if (order.DiscountAmount > 0)
                        {
                            <span class="text-success">@order.DiscountAmount.ToString("N0") تومان</span>
                            @if (!string.IsNullOrEmpty(order.DiscountCouponCode))
                            {
                                <br /><small class="text-muted">@order.DiscountCouponCode</small>
                            }
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                    <td class="fw-bold">@order.TotalPrice.ToString("N0") تومان</td>
                    <td>@order.PaymentMethod</td>
                    <td>
                        <a href="@Url.Action("Details", "Orders", new { id = order.Id })" class="btn btn-sm btn-primary">
                            جزئیات
                        </a>
                        @if (order.PaymentStatusKey.ToString() == "Pending" && order.PaymentMethodKey == "Online")
                        {
                            <a href="@Url.Action("Index", "Payment", new { orderId = @order.Id })"
                               class="btn btn-primary">
                                <i class="bi bi-credit-card"></i> پرداخت
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
