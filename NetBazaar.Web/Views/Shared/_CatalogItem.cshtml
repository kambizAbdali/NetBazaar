@using NetBazaar.Web.EndPoint.ViewModels
@model NetBazaar.Web.EndPoint.ViewModels.ProductViewModel

<div class="col-lg-4 col-md-6 mb-4">
    <div class="card product-card h-100 shadow-sm border-0">
        <div class="position-relative overflow-hidden">
            <img src="@Model.MainImageUrl" class="card-img-top" alt="@Model.Name" style="height:220px; object-fit:cover;">

            <!-- Discount Badge -->
            @if (Model.HasDiscount)
            {
                <span class="badge bg-danger position-absolute top-0 start-0 m-2 px-2 py-1 rounded-pill">
                    %@Model.DiscountPercentage تخفیف
                </span>
            }

            <!-- Featured Badge -->
            @if (Model.IsFeatured)
            {
                <span class="badge bg-warning text-dark position-absolute top-0 end-0 m-2 px-2 py-1 rounded-pill">
                    ویژه
                </span>
            }

            <!-- Stock Status Badge -->
            <span class="badge position-absolute bottom-0 start-0 m-2 px-2 py-1 rounded-pill
                      @(Model.StockStatus == StockStatus.InStock ? "bg-success" :
                        Model.StockStatus == StockStatus.LimitedStock ? "bg-warning" :
                        Model.StockStatus == StockStatus.OutOfStock ? "bg-danger" :
                        Model.StockStatus == StockStatus.ComingSoon ? "bg-info" : "bg-secondary")">
                @switch (Model.StockStatus)
                {
                    case StockStatus.InStock:
                        <text>موجود</text>
                        ; break;
                    case StockStatus.LimitedStock:
                        <text>تعداد محدود</text>
                        ; break;
                    case StockStatus.OutOfStock:
                        <text>ناموجود</text>
                        ; break;
                    case StockStatus.ComingSoon:
                        <text>به زودی</text>
                        ; break;
                    case StockStatus.Discontinued:
                        <text>توقف تولید</text>
                        ; break;
                    default:
                        <text>ناموجود</text>
                        ; break;
                }
            </span>
        </div>

        <div class="card-body d-flex flex-column">
            <!-- Product Name -->
            <h6 class="card-title fw-bold text-truncate" title="@Model.Name">@Model.Name</h6>

            <!-- Short Description -->
            <p class="card-text small text-muted mb-2 text-truncate">@Model.ShortDescription</p>

            <!-- Rating -->
            <div class="rating mb-2">
                @{
                    var fullStars = (int)Model.Rating;
                    var hasHalfStar = Model.Rating - fullStars >= 0.5;
                }
                @for (int i = 1; i <= 5; i++)
                {
                    if (i <= fullStars)
                    {
                        <i class="fas fa-star text-warning"></i>
                    }
                    else if (i == fullStars + 1 && hasHalfStar)
                    {
                        <i class="fas fa-star-half-alt text-warning"></i>
                    }
                    else
                    {
                        <i class="far fa-star text-muted"></i>
                    }
                }
                <small class="text-muted ms-1">(@Model.ReviewCount)</small>
            </div>

            <!-- Price Section -->
            <div class="price-section mt-auto">
                @if (Model.HasDiscount)
                {
                    <div>
                        <span class="h6 text-danger fw-bold">@Model.DisplayPrice تومان</span>
                        <small class="text-muted text-decoration-line-through d-block">@Model.OriginalPrice تومان</small>
                    </div>
                }
                else
                {
                    <span class="h6 text-dark fw-bold">@Model.DisplayPrice تومان</span>
                }
            </div>

            <!-- Tags -->
            @if (Model.Tags != null && Model.Tags.Any())
            {
                <div class="tags mt-2">
                    @foreach (var tag in Model.Tags.Take(3))
                    {
                        <span class="badge bg-light text-dark border me-1">@tag</span>
                    }
                </div>
            }

            <!-- Action Buttons -->
            <div class="mt-3 d-flex justify-content-between">
                <a href="@Url.Action("ProductDetail", "Product", new { id = Model.Id })"
                   class="btn btn-outline-primary btn-sm flex-fill me-1">
                    <i class="fas fa-eye me-1"></i> جزئیات
                </a>
                @if (Model.StockStatus == StockStatus.InStock || Model.StockStatus == StockStatus.LimitedStock)
                {
                    <form method="post" action="/basket/additem" class="flex-fill ms-1">
                        <input type="hidden" name="catalogItemId" value="@Model.Id" />
                        <input type="hidden" name="quantity" value="1" />
                        <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-primary btn-sm w-100">
                            <i class="fas fa-shopping-cart me-1"></i> افزودن
                        </button>
                    </form>
                }
                else
                {
                    <button class="btn btn-secondary btn-sm flex-fill ms-1" disabled>
                        <i class="fas fa-ban me-1"></i> غیرقابل خرید
                    </button>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .product-card {
        transition: all 0.3s ease;
        border-radius: 8px;
        overflow: hidden;
    }

        .product-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.12);
        }

    .card-img-top {
        transition: transform 0.3s ease;
    }

    .product-card:hover .card-img-top {
        transform: scale(1.08);
    }

    .rating {
        direction: ltr;
        text-align: right;
    }
</style>