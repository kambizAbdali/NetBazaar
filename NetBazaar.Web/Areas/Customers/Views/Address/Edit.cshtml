@model CreateOrUpdateUserAddressDto
@{
    ViewData["Title"] = "ویرایش آدرس";
    Layout = "~/Areas/Customers/Views/Shared/_CustomerPanelLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">ویرایش آدرس</h3>
    </div>
    <div class="card-body">
        @await Html.PartialAsync("_ValidationSummary")
        <form asp-action="Edit" method="post">
            <input type="hidden" name="id" value="@ViewBag.AddressId" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ReceiverName" class="form-label">نام گیرنده</label>
                    <input asp-for="ReceiverName" class="form-control" placeholder="نام و نام خانوادگی گیرنده" />
                    <span asp-validation-for="ReceiverName" class="text-danger small"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="PhoneNumber" class="form-label">شماره تماس</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="09123456789" />
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="PostalCode" class="form-label">کد پستی</label>
                    <input asp-for="PostalCode" class="form-control" placeholder="1234567890" />
                    <span asp-validation-for="PostalCode" class="text-danger small"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="AddressText" class="form-label">آدرس کامل</label>
                <textarea asp-for="AddressText" class="form-control" rows="4" placeholder="استان، شهر، خیابان، پلاک، واحد"></textarea>
                <span asp-validation-for="AddressText" class="text-danger small"></span>
            </div>

            <div class="form-check mb-4">
                <input asp-for="IsDefault" class="form-check-input" id="isDefault" />
                <label asp-for="IsDefault" class="form-check-label" for="isDefault">
                    تنظیم به عنوان آدرس پیش‌فرض
                </label>
                <div class="form-text text-muted">
                    <i class="bi bi-info-circle"></i> در صورت انتخاب این گزینه، آدرس‌های پیش‌فرض قبلی غیرفعال می‌شوند.
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> ذخیره تغییرات
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> لغو
                </a>
                @if (ViewBag.AddressId != null)
                {
                    <button type="button" class="btn btn-danger ms-auto"
                            data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash"></i> حذف آدرس
                    </button>
                }
            </div>
        </form>
    </div>
</div>

<!-- Modal حذف -->
@if (ViewBag.AddressId != null)
{
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">تأیید حذف</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>هشدار!</strong> آیا از حذف این آدرس مطمئن هستید؟
                        <br>
                        <small>این عمل قابل بازگشت نیست.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@ViewBag.AddressId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> حذف
                        </button>
                    </form>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x"></i> لغو
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}